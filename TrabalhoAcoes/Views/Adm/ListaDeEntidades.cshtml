
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<nav class="navbar-default navbar-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav" id="main-menu">
            <li>
                <a>@Html.ActionLink("Categorias", "Administrador")</a>
            </li>

            <li>
                <a>@Html.ActionLink("Entidades", "ListaDeEntidades")</a>
            </li>
        </ul>
    </div>
</nav>
<!-- /. NAV SIDE  -->

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <h2>ADMIN DASHBOARD</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <div class="row">
            <div class="col-lg-12 ">
                <div class="alert alert-info">
                    <strong>Bem-vindo Administrador! </strong>
                </div>
                <div class="list-group">
                    <a href="#" class="list-group-item disabled">
                        Lista de Entidades
                    </a>
                    @foreach (var entidade in ViewBag.Entidades)
                    {
                        <a href="#" class="list-group-item">
                            Entidade 1
                            <button class="btn btn-default" style="float:right" onclick="AlertaTemp()">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                            <button class="btn btn-default" style="float:right" onclick="AlertaTemp()">
                                <span class="glyphicon glyphicon-ok"></span>
                            </button>

                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>